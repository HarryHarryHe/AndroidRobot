<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dl2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myandroid.IndexActivity" >

    <Button
        android:id="@+id/index_closeButton"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/back"
        android:onClick="close"
        android:textColor="#000" />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_below="@+id/index_closeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:background="@drawable/click1"
        android:onClick="clicked" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#00000000"
        android:ems="10"
        android:text="单击打卡"
        android:textColor="#fff"
        android:textSize="22dp"
        android:textStyle="bold"
        android:typeface="serif" >
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignLeft="@+id/button1"
        android:background="@drawable/send_btn_bg"
        android:onClick="view_list"
        android:text="打卡记录" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button1"
        android:layout_marginBottom="41dp"
        android:background="@drawable/send_btn_bg"
        android:onClick="wechat"
        android:text="闲聊一下" />

</RelativeLayout>